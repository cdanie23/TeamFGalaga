<Page
    x:Class="Galaga.View.GameCanvas"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Canvas x:Name="canvas" Width="800" Height="620" Background="Black">
        <TextBlock Name="scoreTextBlock" Canvas.Left="641" TextWrapping="Wrap" Text="Score: 0" Canvas.Top="551"
                   FocusVisualPrimaryBrush="#FFE8E3E3" Foreground="#FFE8E3E3" HorizontalAlignment="Left" Height="18"
                   VerticalAlignment="Top" />
        <TextBlock x:Name="playerLivesTextBlock" Canvas.Left="641" TextWrapping="Wrap" Text="Lives : 3"
                   Canvas.Top="573" Foreground="#FFF7F2F2" HorizontalAlignment="Left" VerticalAlignment="Center" />
        <TextBlock x:Name="gameOverTextBlock" Canvas.Left="255" TextWrapping="Wrap" Text="" Canvas.Top="130"
                   Height="79" Width="280" FontSize="48" Foreground="#FFFBF8F8" />
    </Canvas>
</Page>