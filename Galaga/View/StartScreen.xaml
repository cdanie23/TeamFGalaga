<Page
    x:Class="Galaga.View.StartScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Black"
    Width="800"
    Height="620">

    <Grid>
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Welcome to Galaga!" VerticalAlignment="Top" Foreground="#FF0BE42C" FontSize="20" Margin="0,30,0,0"/>
        <Button Content="Start" Margin="0,194,0,0" VerticalAlignment="Top" Foreground="#FFE00606" FontSize="20" HorizontalAlignment="Center" BorderBrush="Green" Background="White" BorderThickness="4" Click="startButton_Click"/>
        <Button Content="Scoreboard" Margin="0,278,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" Foreground="#FFED3005" FontSize="20" BorderBrush="Green" Background="White" BorderThickness="4" Click="scoreboardButton_Click"/>
        <Button Content="Reset Scoreboard" Margin="0,373,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" Foreground="#FFF30707" FontSize="20" BorderBrush="Green" Background="White" BorderThickness="4" Click="resetScoreboardButton_Click"/>

    </Grid>
</Page>